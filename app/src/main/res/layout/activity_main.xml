<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/daytimeBackground"
    app:layout_constraintHorizontal_weight="1"

    tools:context=".MainActivity">

    <eu.marcellofabbri.dailyroadmap.MainHeader
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        app:layout_constraintHeight_percent=".13"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/left_button"
            android:layout_width="50dp"
            android:layout_height="75dp"
            android:drawableLeft="@drawable/ic_chevron_left"
            android:background="@android:color/transparent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/header_date"/>

        <EditText
            android:id="@+id/header_date"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent=".8"
            android:text="TO/DA/YY"
            android:textSize="50sp"
            android:fontFamily="@font/oswald_regular"
            android:textColor="@android:color/white"
            android:autofillHints=""
            android:background="@android:color/transparent"
            app:layout_constraintLeft_toRightOf="@id/left_button"
            app:layout_constraintRight_toLeftOf="@id/right_button"/>

        <Button
            android:id="@+id/right_button"
            android:layout_width="50dp"
            android:layout_height="75dp"
            android:drawableRight="@drawable/ic_chevron_right"
            android:background="@android:color/transparent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/header_date"/>

        <EditText
            android:id="@+id/day_of_the_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DAY"
            android:textColor="@android:color/white"
            android:fontFamily="@font/oswald_light"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@android:color/transparent"
            app:layout_constraintBottom_toBottomOf="parent" />


    </eu.marcellofabbri.dailyroadmap.MainHeader>

    <LinearLayout
        android:id="@+id/central_container"
        android:layout_width="230dp"
        android:layout_height="350dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="230dp"
            android:layout_height="280dp"
            android:background="@android:color/transparent"
            tools:listitem="@layout/event_item" />

        <eu.marcellofabbri.dailyroadmap.MyButtonsCardView
            android:id="@+id/my_buttons_cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/calendar_button"
                android:layout_width="55dp"
                android:layout_height="55dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="40dp"
                android:src="@drawable/ic_calendar_large" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/button_add_event"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_gravity="end"
                android:layout_marginRight="40dp"
                android:backgroundTint="@color/colorAddButton"
                android:src="@drawable/ic_add"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

        </eu.marcellofabbri.dailyroadmap.MyButtonsCardView>

    </LinearLayout>



    <RelativeLayout
        android:id="@+id/eventPainterContainer"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent=".83"
        app:layout_constraintLeft_toLeftOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>