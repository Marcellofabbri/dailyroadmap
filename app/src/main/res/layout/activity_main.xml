<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/daytimeBackground"
    app:layout_constraintHorizontal_weight="1"

    tools:context=".MainActivity">

    <eu.marcellofabbri.dailyroadmap.MainHeader
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        app:layout_constraintHeight_percent=".13"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/left_button"
            android:layout_width="50dp"
            android:layout_height="75dp"
            android:drawableLeft="@drawable/ic_chevron_left"
            android:background="@android:color/transparent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/header_date"/>

        <EditText
            android:id="@+id/header_date"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent=".8"
            android:text="TO/DA/YY"
            android:inputType="none"
            android:focusable="false"
            android:textSize="50sp"
            android:fontFamily="@font/oswald_regular"
            android:textColor="@android:color/white"
            android:autofillHints=""
            android:background="@android:color/transparent"
            app:layout_constraintLeft_toRightOf="@id/left_button"
            app:layout_constraintRight_toLeftOf="@id/right_button"/>

        <Button
            android:id="@+id/right_button"
            android:layout_width="50dp"
            android:layout_height="75dp"
            android:drawableRight="@drawable/ic_chevron_right"
            android:background="@android:color/transparent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/header_date"/>

        <EditText
            android:id="@+id/day_of_the_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DAY"
            android:inputType="none"
            android:focusable="false"
            android:textColor="@android:color/white"
            android:fontFamily="@font/oswald_light"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@android:color/transparent"
            app:layout_constraintBottom_toBottomOf="parent" />


    </eu.marcellofabbri.dailyroadmap.MainHeader>

    <LinearLayout
        android:id="@+id/central_container"
        android:layout_width="230dp"
        android:layout_height="350dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="230dp"
            android:layout_height="280dp"
            android:background="@android:color/transparent"
            tools:listitem="@layout/event_item" />

        <eu.marcellofabbri.dailyroadmap.MyButtonsCardView
            android:id="@+id/my_buttons_cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/semiTrasparent"
            app:cardCornerRadius="33dp">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/calendar_button"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginLeft="0dp"
                android:backgroundTint="@color/trackDefaultColor"
                android:src="@drawable/ic_calendar_large" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="57dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <TextView
                    android:id="@+id/day_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="05"
                    android:fontFamily="@font/oswald_regular"
                    android:textSize="30dp"
                    android:layout_gravity="center"
                    android:textColor="#0116FF"
                    android:elevation="16dp"
                    android:layout_marginBottom="7dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TODAY"
                    android:textSize="9sp"
                    android:layout_marginBottom="7dp"
                    android:layout_gravity="center|bottom"
                    android:textColor="#0033FF"
                    android:elevation="16dp"/>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/today_button"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:backgroundTint="@color/trackDefaultColor" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginRight="57dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ALL"
                    android:textSize="8sp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="1dp"
                    android:textColor="@android:color/black"
                    android:elevation="16dp"/>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/button_delete_today_events"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:backgroundTint="@color/trackDefaultColor"
                    android:src="@drawable/ic_big_trash"

                    android:scaleType="centerInside"/>

            </FrameLayout>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/button_add_event"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_gravity="end"
                android:layout_marginRight="0dp"
                android:backgroundTint="@color/trackDefaultColor"
                android:src="@drawable/ic_add"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

        </eu.marcellofabbri.dailyroadmap.MyButtonsCardView>

    </LinearLayout>



    <eu.marcellofabbri.dailyroadmap.EventPainterContainer
        android:id="@+id/eventPainterContainer"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent=".83"
        app:layout_constraintLeft_toLeftOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>